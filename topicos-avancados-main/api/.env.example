# ==============================================
# CONFIGURAÇÕES DO BANCO DE DADOS POSTGRESQL
# ==============================================
DB_HOST=database
DB_PORT=5432
DB_NAME=topicos_avancados
DB_USER=api_user
DB_PASSWORD=api_password

# ==============================================
# CONFIGURAÇÕES DA API SPRING BOOT
# ==============================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=docker
API_VERSION=v1

# ==============================================
# CONFIGURAÇÕES DE SEGURANÇA
# ==============================================
# JWT - Mínimo 256 bits (32 caracteres)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-256-bits-long-here-change-this
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Configurações de criptografia
BCRYPT_ROUNDS=12
AES_SECRET_KEY=your-aes-secret-key-32-chars-long

# ==============================================
# CONFIGURAÇÕES DO REDIS
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_TIMEOUT=2000
REDIS_DATABASE=0

# ==============================================
# CONFIGURAÇÕES DE CORS
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# ==============================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# ==============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true
MAIL_FROM=noreply@topicos.com

# ==============================================
# CONFIGURAÇÕES DE UPLOAD DE ARQUIVOS
# ==============================================
FILE_UPLOAD_DIR=/app/uploads
FILE_MAX_SIZE=10MB
FILE_MAX_REQUEST_SIZE=10MB
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# ==============================================
# CONFIGURAÇÕES DE LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/api.log
LOG_MAX_FILE_SIZE=10MB
